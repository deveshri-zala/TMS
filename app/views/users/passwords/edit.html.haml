%h1 Change your password
%br
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :id => "clientLogin", class: 'clientside_validation' }) do |f|

  = f.hidden_field :reset_password_token
  .form-group
    .field
      = f.label :password, "New password"
      %br/
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control require_validation password_validation", minlength: 6, maxlength: 15

  .form-group
    .field
      = f.label :password_confirmation, "Confirm new password"
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control require_validation password_validation confirm_password_validation", minlength: 6, maxlength: 15

  %br/
  .actions
    = f.submit "Change my password", class: 'btn btn-primary'
  %p
    = render "users/shared/links"
