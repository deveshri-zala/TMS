%h1 Change your password
%br
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :id => "clientLogin",'data-toggle' => "validator", role: "form" }) do |f|

  = f.hidden_field :reset_password_token
  .form-group
    .field
      = f.label :password, "New password"
      %br/
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
        %br/
      = f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", required: true, 'data-minlength' => "6"
      .help-block.with-errors
  .form-group
    .field
      = f.label :password_confirmation, "Confirm new password"
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, 'data-minlength' => "6", 'data-match' => "#user_password", 'data-match-error' => "Whoops, these don't match"
      .help-block.with-errors
  %br/
  .actions
    = f.submit "Change my password", class: 'btn btn-primary'
  %p
    = render "users/shared/links"
