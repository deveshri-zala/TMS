%h1 Sign up
%p
  Use the forms below to create or update the information we have on file for your account

= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :id => "clientLogin", class: "user-form clientside_validation" }) do |f|

  .form-group
    .field
      = f.label :fullname
      %br/
      = f.text_field :fullname, autofocus: true, class: "form-control", maxlength: 30

  .form-group
    .field
      = f.label :phone
      %br/
      = f.text_field :phone, class: "form-control phone_validation", maxlength: 15

  .form-group
    .field
      = f.label :email
      %br/
      = f.email_field :email ,class: "form-control require_validation email_validation", placeholder: "example@example.com"

  .form-group
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off", class: "form-control require_validation password_validation", minlength: 6, maxlength: 30

  .form-group
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control require_validation password_validation confirm_password_validation", minlength: 6, maxlength: 30

  %br/
  .actions
    = f.submit "Sign up", class: 'btn btn-primary'
  %p
    = render "users/shared/links"
