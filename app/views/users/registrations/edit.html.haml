%h1 Edit #{resource_name.to_s.humanize}
%br/
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "user-form clientside_validation" }) do |f|

  .form-group
    .field
      = f.label :fullname
      %br/
      = f.text_field :fullname, autofocus: true, class: "form-control", maxlength: 30

  .form-group
    .field
      = f.label :phone
      %br/
      = f.text_field :phone, class: "form-control phone_validation", maxlength: 15

  .form-group
    .field
      / = f.hidden_field :email
      = f.label :email
      %br/
      = f.text_field :email, :readonly => true, class: "form-control"
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}

  .form-group
    .field
      = f.label :password
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "off", class: "form-control require_validation password_validation", minlength: 6, maxlength: 30
      - if @minimum_password_length
        %em
          = @minimum_password_length
          characters minimum

  .form-group
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control require_validation password_validation confirm_password_validation", minlength: 6, maxlength: 30

  .form-group
    .field
      = f.label :current_password
      %br/
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "off", class: "form-control require_validation password_validation", minlength: 6, maxlength: 30

  %br
  .actions
    = f.submit "Update", class: 'btn btn-primary'
    = link_to "Back", home_path, class: 'btn btn-primary button', id: 'back-button'
